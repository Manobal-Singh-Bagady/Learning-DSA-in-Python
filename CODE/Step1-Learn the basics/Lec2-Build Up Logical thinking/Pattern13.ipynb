    "# Pattern 13\n",
    "def nNumberTriangle(n: int) -> None:\n",
    "    num = 1\n",
    "    for i in range(n):\n",
    "        for _ in range(i+1):\n",
    "            print(num, end=' ')\n",
    "            num+=1\n",
    "        print()\n",
    "\n",
    "\n",
    "nNumberTriangle(5)"
   ]
